{
  "name": "@nook-world/data",
  "version": "0.2.6",
  "description": "The data used by our applications",
  "scripts": {
    "clean": "node -r ts-node/register scripts/clean-build.ts",
    "generate": "node -r ts-node/register scripts/generator.ts",
    "build": "npm run clean && npm run generate",
    "prepublishOnly": "npm run build",
    "release": "standard-version"
  },
  "devDependencies": {
    "@sindresorhus/slugify": "^0.11.0",
    "camelcase": "^6.0.0",
    "event-stream": "^4.0.1",
    "fs-extra": "^9.0.0",
    "jsonl": "^1.1.2",
    "globby": "^11.0.0",
    "typescript": "^3.8.3",
    "ts-node": "^8.8.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/event-stream": "^3.3.34",
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^13.11.1",
    "husky": "^4.2.0",
    "prettier": "^2.0.4",
    "lint-staged": "^10.0.8",
    "pretty-quick": "^2.0.1",
    "standard-version": "^7.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nook-world/data.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/nook-world/data/issues"
  },
  "homepage": "https://github.com/nook-world/data#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "volta": {
    "node": "13.12.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "pretty-quick --staged"
    ],
    "*.json": [
      "pretty-quick --staged"
    ]
  },
  "standard-version": {
    "header": "# CHANGELOG - @nook-world/data\n",
    "releaseCommitMessageFormat": "chore(release): v{{currentTag}}"
  }
}
